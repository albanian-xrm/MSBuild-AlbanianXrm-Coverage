<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://schemas.microsoft.com/packaging/2012/06/nuspec.xsd">
  <metadata>
    <id>MSBuild.AlbanianXrm.Coverage</id>
    <version>$version$</version>
    <title>Albanian Coverage MSBuild Task</title>
    <authors>Betim Beja</authors>
    <owners>Betim Beja;AlbanianXrm</owners>
    <requireLicenseAcceptance>false</requireLicenseAcceptance>
    <description>This task is intended to work with zero configuration but is fully configurable. You simply add the test projects as a Project Reference and it generates the output using ReportGenerator.</description>    
    <copyright>AlbanianXrm (c) 2021</copyright>
    <projectUrl>https://github.com/albanian-xrm/MSBuild-AlbanianXrm-Coverage</projectUrl>
    <repository type="git" url="https://github.com/albanian-xrm/MSBuild-AlbanianXrm-Coverage" />
    <iconUrl>https://raw.githubusercontent.com/albanian-xrm/MSBuild-AlbanianXrm-Coverage/master/Logo_80x80.png</iconUrl>
    <releaseNotes>
      $version$: Added support for packages.config based projects
    </releaseNotes>
    <license type="expression">MIT</license>	
    <tags>MSBuild XUnit OpenCover ReportGenerator</tags>
    <dependencies>
      <dependency id="OpenCover" version="4.7.922" />
      <dependency id="ReportGenerator" version="4.8.4" />
      <dependency id="xunit.runner.console" version="2.4.1" />
    </dependencies>
  </metadata>
  <files>
    <file src="MSBuild.AlbanianXrm.Coverage.targets" target="build\MSBuild.AlbanianXrm.Coverage.targets" />
  </files>
</package>